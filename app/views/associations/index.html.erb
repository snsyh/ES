<p id="notice"><%= notice %></p>

<h1>Listing Associations</h1>

<table>
  <thead>
    <tr>
      <th>Association name</th>
      <th>Delegate name</th>
      <th>Prefecture type</th>
      <th>Tel</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @associations.each do |association| %>
      <tr>
        <td><%= association.association_name %></td>
        <td><%= association.delegate_name %></td>
        <td><%= association.prefecture_type.name %></td>
        <td><%= association.tel1 %>-<%= association.tel2 %>-<%= association.tel3 %></td>
        <td><%= association.email %></td>
        <td><%= link_to 'Show', association %></td>
        <td><%= link_to 'Edit', edit_association_path(association) %></td>
        <td><%= link_to 'Destroy', association, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

